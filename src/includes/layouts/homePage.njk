{# --------------2.0 Début Nommé un block Content #}
{% block content %}




{# --------------2.1. Début tete de page #}
<div class="hero-slider">

        {% for exemple in banniere %}
            <div class="single-slide" style="background-image: url(assets/img/slide1.jpg)">
                <div class="inner">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="slide-content">
                                    <h2> {{ exemple.ligneDuHaut }}</h2>
                                    <p>{{ exemple.presentation }}</p>
                                    <div class="slide-btn">
                                        <a href="{{ exemple.link.url }}" class="button">{{ exemple.link.texte }}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

</div> 
{# --------------2.1 Fin tete de page #}



{# --------------2.2 Début block ABOUT #}
<div class="about-area sp">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="about-content">
                    <h3>{{ About.titre }}</h3>
                    <p>{{ About.description }} </p>
                    <a href="{{ About.link.url }}" class="button">{{ About.link.texte }}</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="about-img">
                    <img src="{{ About.image }}" alt="{{ About. titre }}">
                </div>
            </div>
        </div>
    </div>
</div> 
{# --------------2.2 Fin block ABOUT #}



{# --------------2.3 Début block SERVICE #}
<div class="service-area spt">
    <div class="container">
        <div class="section-title" data-margin="0 0 40px">
            <h2>{{ service.titre }}</h2>
            <p>{{ service.description }}</p>
        </div>
        <div class="row">

        {% for post in collections.service %}
            <div class="col-md-4 single-service-2">
                <div class="inner">
                    <div class="title">
                        <div class="icon">
                            <i class="fa fa-{{ post.data.faIcon }}"></i>
                        </div>
                        <h4>{{ post.data.titre }}</h4>
                    </div>
                    <div class="content">
                        <p>{{ post.data.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}

        </div>
    </div>
</div>   
{# --------------2.3 Fin block SERVICE #}
            


{# --------------2.4 Début 4 PHOTOS sur une ligne #}
<div class="spb">
    <div class="brand-area">
        <div class="container">
            <div class="row">

            {% for annonce in collections.annonce %}
                <div class="col-md-3 col-6 single-brand">
                    <div class="inner">
                        <a href="{{ annonce.data.url }}">
                            <img src="{{ annonce.data.image }}" alt="{{ annonce.data.titre }}">
                        </a>
                    </div>
                </div>
            {% endfor %}
                
            </div>
        </div>
    </div>        
</div>
{# --------------2.4 Fin 4 PHOTOS sur une ligne #}



{# --------------2.5 Début AVIS CLIENTS #}
<div class="testimonial-area sp spb">
    <div class="container">
        <div class="section-title">
            <h2>{{ avisClient.titre }}</h2>
            <p>{{ avisClient.description }}</p>
        </div>
        <div class="testimonial-slider bordered">

            {% for post in collections.testi %}
                <div class="single-slide">
                    <div class="inner">
                        <p> {{ post.data.libelle }}</p>
                        <div class="client-info">
                            <div class="client-img">
                                <img src="assets/img/client.jpg" alt="client">
                            </div>
                            <div class="client-data">
                                <h4>"{{ post.data.nom }}"</h4>
                                <span>"{{ post.data.profession }}"</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{# --------------2.5 Fin AVIS CLIENTS #}



